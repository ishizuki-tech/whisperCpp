# =========================
# Android Project .gitignore (Cleaned)
# =========================

# Gradle (build outputs and caches)
.gradle/
build/
**/build/
local.properties

# Android Studio / IntelliJ
.idea/
*.iml
*.ipr
*.iws
.idea/caches
.idea/libraries
.idea/modules.xml
.idea/workspace.xml
.idea/navEditor.xml
.idea/assetWizardSettings.xml

# Keystore (絶対にコミットしない)
*.jks
*.keystore
*.pem
*.p12

# Log / Generated
*.log
*.hprof
captures/
output.json

# OS / Editor files
.DS_Store
Thumbs.db
*.swp
*.swo
*.tmp
*.bak
*.orig

# Kotlin / Java build artefacts
*.class
*.jar
*.war
*.ear

# Android build outputs
app/release/
app/debug/
*.apk
*.ap_
*.aab
*.idsig

# NDK / CMake outputs
.obj/
*.so
*.o
*.a
.cxx/

# Lint
lint/intermediates/
lint/generated/
lint/outputs/
lint/tmp/

# Google Services (必要ならプロジェクトで管理を外す)
google-services.json
GoogleService-Info.plist

# Crashlytics / Firebase
fabric.properties
crashlytics-build.properties

# Fastlane
fastlane/report.xml
fastlane/Preview.html
fastlane/screenshots
fastlane/test_output

# Node.js (React Native 等)
node_modules/
npm-debug.log
yarn-error.log

# =========================
# AI model binaries & caches (ignore large model files)
# =========================
# Whisper / Llama / ONNX / TFLite / PyTorch etc.
*.bin
*.gguf
*.onnx
*.tflite
*.pt
*.pth
*.safetensors

# Tokenizer / Vocab / Tokenizer caches
*.json
*.vocab
*.model
*.merges
*.sentencepiece

# Model cache / checkpoints / downloads
models/
model/
checkpoints/
pretrained/
downloads/
.huggingface/
transformers_cache/

# =========================
# Project-specific (例: JNI/NDK モジュール)
# =========================
nativelib/build/
nativelib/obj/
nativelib/.cxx/
nativelib/whisper_core/build/
nativelib/whisper_core/bin/
nativelib/whisper_core/.cxx/

# =========================
# Exceptions: keep Gradle wrapper committed
# Place exceptions AFTER generic *.jar rule so they take effect.
# =========================
# Allow top-level gradle-wrapper.jar (if present at repo root)
!gradle-wrapper.jar

# Allow gradle/wrapper directory and the wrapper jar inside it
!gradle/wrapper/
!gradle/wrapper/gradle-wrapper.jar
